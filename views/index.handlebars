<h1>BurgerTown USA</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

{{!-- NEW BURGER FORM --}}

<form class="addBurger">
  <input type="text">
  <button type="submit">Add Burger</button>
</form>
<p>Input the name of the burger you'd like to queue and click "Add Burger"</p>